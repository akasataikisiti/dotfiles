[include]
  # ユーザ情報
  path = .gitconfig.user

[color]
	ui = true
[core]
	editor = nvim
[alias]
	co = checkout
	st = status
	br = branch
	ci = commit
  sw = switch
[alias]
  dt = difftool
  dc = difftool --cached
  dp = difftool HEAD~

; git difftoolでnvimが使用されるようにする
[difftool]
	prompt = true
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = nvim -d "$LOCAL" "$REMOTE"




